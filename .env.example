# ==========================================
# SEERA AI - Production Environment Variables
# ==========================================
# Copy this file to .env.local for development
# For Vercel deployment, add these in the Vercel Dashboard
# Settings > Environment Variables
# ==========================================

# ===========================================
# DATABASE (Required)
# ===========================================
# Supabase PostgreSQL connection string
# Get from: Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# ===========================================
# SUPABASE STORAGE (Interview recordings)
# ===========================================
SUPABASE_URL="https://[PROJECT_REF].supabase.co"
SUPABASE_SERVICE_ROLE_KEY=""
SUPABASE_STORAGE_BUCKET_INTERVIEWS="interview-recordings"
SUPABASE_STORAGE_SIGNED_TTL="604800"

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# Your production domain
NEXTAUTH_URL="https://seera-ai.com"

# Secret key for JWT signing (min 32 characters)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-a-secure-random-string-at-least-32-characters"

# ===========================================
# GOOGLE OAUTH (Required for Google login)
# ===========================================
# Get from: https://console.cloud.google.com/apis/credentials
# Add authorized redirect URI: https://seera-ai.com/api/auth/callback/google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ===========================================
# EMAIL SERVICE (Required)
# ===========================================
# Resend API for transactional emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY=""

# Sender email - must be from a verified domain in Resend
# For testing, use: Seera AI <onboarding@resend.dev>
# Production uses verified subdomain: updates.seera-ai.com
EMAIL_FROM="Seera AI <noreply@updates.seera-ai.com>"

# ===========================================
# TUWAIQPAY PAYMENTS (Required for subscriptions)
# ===========================================
# Base URL (Production or UAT)
TUWAIQPAY_BASE_URL="https://onboarding-prod.tuwaiqpay.com.sa"
TUWAIQPAY_USERNAME="+966500000000"
TUWAIQPAY_USER_NAME_TYPE="MOBILE"
TUWAIQPAY_PASSWORD="your-tuwaiqpay-password"

# Webhook verification header (default values if you did not set custom values)
TUWAIQPAY_WEBHOOK_HEADER_NAME="x-signature"
TUWAIQPAY_WEBHOOK_HEADER_VALUE="Tuwaiqpay"

# Optional language for API responses (en or ar)
TUWAIQPAY_LANGUAGE="en"

# ===========================================
# STRIPE (Legacy/Optional)
# ===========================================
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRO_MONTHLY_PRICE_ID=""
STRIPE_PRO_YEARLY_PRICE_ID=""
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=""
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=""

# ===========================================
# OPENAI API (Required for AI features)
# ===========================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# ===========================================
# APP CONFIGURATION
# ===========================================
# Your production domain (with https://)
NEXT_PUBLIC_APP_URL="https://seera-ai.com"
NEXT_PUBLIC_APP_NAME="Seera AI"

# ===========================================
# SUPER ADMIN
# ===========================================
# This email gets automatic SUPER_ADMIN role and ENTERPRISE plan
SUPER_ADMIN_EMAIL="info@seera-ai.com"

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_GENERATION="true"
ENABLE_LINKEDIN_IMPORT="false"
ENABLE_2FA="false"
MAINTENANCE_MODE="false"

# ===========================================
# OPTIONAL: REDIS (For rate limiting)
# ===========================================
# Use Upstash for serverless Redis: https://upstash.com
# REDIS_URL="redis://default:PASSWORD@HOST:PORT"

# ===========================================
# OPTIONAL: ERROR MONITORING
# ===========================================
# Sentry for error tracking: https://sentry.io
# SENTRY_DSN=""

# ===========================================
# DEPLOYMENT CHECKLIST
# ===========================================
# Before going live:
# [ ] All environment variables set in Vercel
# [ ] DATABASE_URL points to production database
# [ ] NEXTAUTH_SECRET is unique (not the dev one!)
# [ ] NEXTAUTH_URL matches your domain
# [ ] TuwaiqPay credentials are live
# [ ] TuwaiqPay webhook endpoint configured
# [ ] Google OAuth redirect URI added
# [ ] Resend domain verified (or use test email)
# [ ] OpenAI API has billing enabled
# [ ] Super admin email is correct
# [ ] Run: npx prisma db push (or migrate)
# ==========================================
